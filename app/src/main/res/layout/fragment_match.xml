<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/match_fragment"
    android:background="@drawable/degradesplashscreen"
    tools:context="com.example.footballapi.view.fragments.MatchFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:paddingTop="4dp"
        android:background="#FFFFFF"
        android:paddingBottom="1dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivLogoClubHome"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="40sp"
            android:contentDescription="@string/logoclubhome"
            android:gravity="center" />
        <TextView
            android:fontFamily=""
            android:text="@string/tvTiret"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black" />
        <ImageView
            android:layout_marginStart="40sp"
            android:id="@+id/ivLogoClubAway"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/logoclubaway"
            android:gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:background="#FFFFFF"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvNameHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textAlignment="center"
            tools:ignore="NestedWeights" />
        <TextView
            android:id="@+id/tvNameAway"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvVenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginEnd="20sp"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/tvMatchDate"
            android:fontFamily=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvGoalHomeHT"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:textColor="@color/black"
            android:layout_marginEnd="50sp"
            android:textAlignment="center"
            tools:ignore="NestedWeights" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mt"
            android:textColor="@color/black"
            android:layout_marginEnd="50sp"
            android:textAlignment="center"
            tools:ignore="NestedWeights" />
        <TextView
            android:id="@+id/tvGoalAwayHT"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:background="#FFFFFF"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvGoalHomeFT"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:textColor="@color/black"
            android:layout_marginEnd="50sp"
            android:textAlignment="center"
            tools:ignore="NestedWeights" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fin"
            android:textColor="@color/black"
            android:layout_marginEnd="50sp"
            android:textAlignment="center"
            tools:ignore="NestedWeights" />
        <TextView
            android:id="@+id/tvGoalAwayFT"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvNbParieurs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            tools:ignore="NestedWeights" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutCotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvPourcentHome"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:textColor="@color/white"
            android:layout_marginEnd="110sp"
            android:textAlignment="center"
            tools:ignore="NestedWeights" />
        <TextView
            android:id="@+id/tvPourcentAway"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutBetButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="1dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnWinnerHome"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:targetApi="lollipop"
            tools:ignore="ButtonStyle,UnusedAttribute" />
        <Button
            android:id="@+id/btnWinnerAway"
            android:layout_width="160dp"
            android:textAlignment="center"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:ignore="ButtonStyle"
            tools:targetApi="lollipop" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="1dp"
        android:layout_weight="4"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="1dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="NestedWeights">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/matches_totaux"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                tools:ignore="NestedWeights" />
            <TextView
                android:id="@+id/tvMatchesTotaux"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/buts_totaux"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                tools:ignore="NestedWeights" />
            <TextView
                android:id="@+id/tvButsTotaux"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/nuls"
                android:gravity="center"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_weight="1"
                tools:ignore="NestedWeights" />
            <TextView
                android:id="@+id/tvNuls"
                android:autoLink="web"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:gravity="center"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvVictoiresHome"
                android:textAlignment="center"
                android:autoLink="web"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:ignore="NestedWeights" />

            <ProgressBar
                android:id="@+id/pbVictoriesHome"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/victoires"
                android:gravity="center"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_weight="2"
                tools:ignore="NestedWeights" />

            <ProgressBar
                android:id="@+id/pbVictoriesAway"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4" />

            <TextView
                android:id="@+id/tvVictoiresAway"
                android:textAlignment="center"
                android:autoLink="web"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:gravity="center"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDefaitesHome"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoLink="web"
                android:textColor="@color/black"
                tools:ignore="NestedWeights" />
            <ProgressBar
                android:id="@+id/pbDefeatsHome"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/d_faites"
                android:gravity="center"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_weight="2"
                tools:ignore="NestedWeights" />
            <ProgressBar
                android:id="@+id/pbDefeatsAway"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4" />
            <TextView
                android:id="@+id/tvDefaitesAway"
                android:textAlignment="center"
                android:autoLink="web"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>