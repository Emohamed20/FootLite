<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="6"> <!-- nombre de colonnes -->

    <TextView
        android:id="@+id/tvMatchday"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="4dp" />
    <TextView
        android:id="@+id/tvHomeTeam"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Dortmund"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="4dp" />
    <TextView
        android:id="@+id/tvScoreHomeTeam"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="4dp"/>
    <TextView
        android:id="@+id/tiret"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_weight="1"
        android:gravity="center" />
    <TextView
        android:id="@+id/tvScoreAwayTeam"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="4dp"/>
    <TextView
        android:id="@+id/tvAwayTeam"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Bayern"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="4dp"/>
</LinearLayout>