<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/nomClub_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_weight="2"
        android:padding="4dp" />

    <Button
        android:id="@+id/btnCompetSearch"
        android:layout_width="0dp"
        android:layout_margin="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/btnCompetSearchTitle"
        android:textColor="@color/white"
        android:background="@color/colorFonce"
        tools:ignore="ButtonStyle" />

    <Button
        android:id="@+id/btnTeamSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:background="@color/colorClair"
        android:textColor="@color/white"
        android:text="@string/btnTeamSearchTitle"
        tools:ignore="ButtonStyle" />
</LinearLayout>