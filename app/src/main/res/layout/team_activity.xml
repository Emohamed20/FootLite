<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/team_activity"
    android:orientation="vertical"
    tools:context="com.example.footballapi.view.activities.TeamActivity"
    tools:ignore="ExtraText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Couleurs : "
            android:textStyle="bold"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tvTeamsColors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stade : "
            android:textStyle="bold"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tvStade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compétitions en cours : "
            android:textStyle="bold"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tvActiveCompetitions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSquad"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Equipe" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Matches"
            android:id="@+id/btnMatches"/>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:weightSum="4"> <!-- nombre de colonnes -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Nom"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="4dp"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Nationalité"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="4dp"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Poste"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="4dp"/>
        <TextView
            android:id="@+id/tvPoints"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Numéro"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/idFragmentSquad_Match"
        android:name="com.example.footballapi.view.Squad_MatchFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_squad" />

</LinearLayout>